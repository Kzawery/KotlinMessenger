<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_textedit_login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp" android:hint="Email"
            android:background="@drawable/rounded_corner" android:layout_marginTop="200dp"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_textview_login"
            app:layout_constraintTop_toBottomOf="@+id/email_textedit_login"
            app:layout_constraintStart_toStartOf="@+id/email_textedit_login"
            app:layout_constraintEnd_toEndOf="@+id/email_textedit_login"
            android:background="@drawable/rounded_corner" android:hint="Password"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/login_button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="          login           "
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/password_textview_login"
            app:layout_constraintStart_toStartOf="@+id/password_textview_login"
            app:layout_constraintTop_toBottomOf="@+id/password_textview_login" />

    <TextView
            android:id="@+id/back_to_register_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Back to register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/login_button_login"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/login_button_login"
            app:layout_constraintTop_toBottomOf="@+id/login_button_login"
            app:layout_constraintVertical_bias="0.562" />
</androidx.constraintlayout.widget.ConstraintLayout>